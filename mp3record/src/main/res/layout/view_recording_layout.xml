<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:background="@mipmap/im_record_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/llayout_recording_root"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"
            android:src="@drawable/icon_record_label" />

        <ImageView
            android:id="@+id/img_record_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/im_record_8" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_record_cancel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@mipmap/im_audio_cancle"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_record_short"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_record_short"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_record_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llayout_recording_root"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="手指上滑，取消发送"
        android:textColor="#ffffff"
        android:textSize="14sp" />
    <View
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@drawable/bg_white_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_record_hint"/>

</RelativeLayout>
